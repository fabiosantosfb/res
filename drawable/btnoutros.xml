<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip"></corners>
            <stroke android:width="1dip" android:color="#b7b9ac"></stroke>
            <gradient android:angle="-90" android:startColor="#a3a890" android:endColor="#d3d5c9"></gradient>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip"></corners>
            <stroke android:width="1dip" android:color="#b7b9ac"></stroke>
            <solid android:color="#d3d8c2"></solid>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="3dip"></corners>
            <stroke android:width="1dip" android:color="#b7b9ac"></stroke>
            <solid android:color="#fff"></solid>
        </shape>
    </item>

</selector>